# ─────────────────────────────────────────────
# Itifaq Onboarding Platform — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ─────────────────────────────────────────────

# Flask
FLASK_ENV=development
FLASK_SECRET_KEY=change-this-to-a-long-random-string

# PostgreSQL
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/itifaq_onboarding

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=sk-...

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# SendGrid (Email)
SENDGRID_API_KEY=SG....
SENDGRID_FROM_EMAIL=noreply@yourfirm.com

# Calendly
CALENDLY_API_KEY=...

# DocuSeal (self-hosted — set your DocuSeal instance URL)
DOCUSEAL_URL=http://localhost:3000
DOCUSEAL_API_KEY=...

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800

# Security
TOKEN_EXPIRY_DAYS=30
ENCRYPTION_KEY=change-this-to-a-32-byte-key-here
